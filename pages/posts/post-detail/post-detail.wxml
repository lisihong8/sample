
<!-- 先静后动,先样式再数据 -->

<view class="container">

  <image src="{{headImgSrc}}" class="head-image"></image>
  <image src="/images/music/music-start.png" class="audio"></image>

  <view class="author-date">
    <image src="{{avatar}}" class="avatar"></image>
    <text class="author">{{author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{dateTime}}</text>
  </view>

  <text class="title">{{title}}</text>

  <view class="tool">

    <view class="circle-img">
      <image src="/images/icon/collection.png"></image>
      <image src="/images/icon/share.png" class="share-img"></image>
    </view>

    <!-- 一条直线 -->
    <view class="horizon"></view>
    <!-- 一条直线 -->

  </view>

  <text class="detail">{{detail}}</text>

</view>