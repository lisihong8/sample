.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  /* transform: translateX(-50%); */
  top: 180rpx;
  /* top: 50%; */
  /* margin-top: -55rpx; */
  /* transform: translateY(-50%); */
  opacity: 0.6;
}

.author-date {
  display: flex;
  flex-direction: row;

  /* 每个子元素 垂直居中 */
  align-items: center;

  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height:64rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left:20rpx;

}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title {
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}





.tool {
  margin-top: 20rpx;
  /* background-color: pink; */
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  /* vertical-align: middle; */
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
  vertical-align: middle;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;

  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}








.detail {
  margin: 20rpx 30rpx 0 30rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 44rpx;
  letter-spacing: 2px;
}